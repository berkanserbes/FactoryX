@model FactoryX.Application.DTOs.OperatorDto
@{
    ViewData["Title"] = "Yeni Operatör";
}

<partial name="_Alert" />

<h2 class="fw-bold mb-4">Yeni Operatör Ekle</h2>

<form asp-action="Create" method="post" class="glass-card p-4 shadow-sm" autocomplete="off">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ad Soyad</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EmployeeNumber" class="form-label">Çalışan No</label>
        <input asp-for="EmployeeNumber" class="form-control" />
        <span asp-validation-for="EmployeeNumber" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary rounded-pill px-4">Kaydet</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
        max-width: 500px;
        margin: auto;
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>