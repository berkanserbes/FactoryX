@model FactoryX.Application.DTOs.WorkOrderDto
@{
    ViewData["Title"] = "İş Emri Sil";
}

<h2 class="fw-bold mb-4 text-danger">İş Emri Sil</h2>

<div class="glass-card p-4 shadow-sm mx-auto" style="max-width: 500px;">
    <p class="mb-3">Aşağıdaki iş emrini silmek istediğinize emin misiniz?</p>
    <dl class="row mb-0">
        <dt class="col-5">Ürün</dt>
        <dd class="col-7">@Model.ProductId <!-- ProductName eklenecek --></dd>
        <dt class="col-5">Makine</dt>
        <dd class="col-7">@Model.MachineId <!-- MachineName eklenecek --></dd>
        <dt class="col-5">Miktar</dt>
        <dd class="col-7">@Model.Quantity</dd>
        <dt class="col-5">Başlangıç</dt>
        <dd class="col-7">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-5">Bitiş</dt>
        <dd class="col-7">@Model.EndDate.ToShortDateString()</dd>
        <dt class="col-5">Durum</dt>
        <dd class="col-7">@Model.Status</dd>
    </dl>
    <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
    </form>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>