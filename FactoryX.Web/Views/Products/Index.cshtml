@model IEnumerable<FactoryX.Application.DTOs.Responses.ProductResponses.GetAllProductResponse>
@{
    ViewData["Title"] = "Products";
}
<div class="container py-4">
    @await Html.PartialAsync("_Alert")
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0"><i class="bi bi-box-seam text-success me-2"></i>Products</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm"><i class="bi bi-plus-lg me-1"></i> Create
            Product</a>
    </div>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-2">@product.Name</h5>
                        <div class="mb-2 text-muted small">Code: <span class="fw-semibold">@product.Code</span></div>
                        <div class="mb-3">@product.Description</div>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm"><i
                                    class="bi bi-eye"></i> Details</a>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning btn-sm"><i
                                    class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm"><i
                                    class="bi bi-trash"></i> Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4 text-center">
            <i class="bi bi-info-circle"></i> No products found. Click <b>Create Product</b> to add your first product.
        </div>
    }
</div>