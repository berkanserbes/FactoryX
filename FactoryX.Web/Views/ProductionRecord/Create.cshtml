@model FactoryX.Application.DTOs.ProductionRecordDto
@{
    ViewData["Title"] = "Yeni Üretim Kaydı";
    // WorkOrder ve Operator listeleri ileride ViewBag ile gelecek
}

<partial name="_Alert" />

<h2 class="fw-bold mb-4">Yeni Üretim Kaydı Ekle</h2>

<form asp-action="Create" method="post" class="glass-card p-4 shadow-sm" autocomplete="off">
    <div class="mb-3">
        <label asp-for="WorkOrderId" class="form-label">İş Emri</label>
        <select asp-for="WorkOrderId" class="form-select" asp-items="ViewBag.WorkOrders">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="WorkOrderId" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OperatorId" class="form-label">Operatör</label>
        <select asp-for="OperatorId" class="form-select" asp-items="ViewBag.Operators">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="OperatorId" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="QuantityProduced" class="form-label">Üretilen Miktar</label>
        <input asp-for="QuantityProduced" class="form-control" />
        <span asp-validation-for="QuantityProduced" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Timestamp" class="form-label">Tarih/Saat</label>
        <input asp-for="Timestamp" type="datetime-local" class="form-control" />
        <span asp-validation-for="Timestamp" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary rounded-pill px-4">Kaydet</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
        max-width: 600px;
        margin: auto;
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>